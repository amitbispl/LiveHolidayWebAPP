
@{
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
	<meta charset="utf-8" />
	<meta http-equiv="x-ua-compatible" content="ie=edge" />
	<title> Welcome : @Convert.ToString(Context.Session.GetString("Title"))  - HOLIDAY - RIGHT - AWAY </title>
	<meta name="description" content=""/>
	<meta name="viewport" content="width=device-width, initial-scale=1"/>
	<link rel="icon" href="~/img/fav-icon.png" type="image/x-icon" asp-append-version="true">
	<!-- CSS here -->
	<link rel="stylesheet" href="~/dreamdays/cssut/bootstrap.min.css"/>
	<link rel="stylesheet" href="~/dreamdays/cssut/owl.carousel.min.css"/>
	<link rel="stylesheet" href="~/dreamdays/cssut/animate.min.css"/>
	<link rel="stylesheet" href="~/dreamdays/cssut/magnific-popup.css"/>
	<link rel="stylesheet" href="~/dreamdays/cssut/meanmenu.css"/>
	<link rel="stylesheet" href="~/dreamdays/cssut/fontawesome-all.min.css"/>
	<link rel="stylesheet" href="~/dreamdays/cssut/flaticon.css"/>
