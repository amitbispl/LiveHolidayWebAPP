	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

	<!-- Css Link -->
	<link rel="stylesheet" href="buddhastyle.css" />

	<style>
		.carousel-inner img {
			width: 100%;
			height: 100%;
		}

		.official-price {
			font-size: 20px;
			font-weight: 500;
		}

		#shoppingbtn {
			margin: 0 !important;
		}

		@@media screen and (max-width: 768px) {
			.sliderres

		{
			margin-top: 140px;
		}

		.main-menu-area {
			padding: 0 !important;
		}

		.logo img {
			width: 150px !important;
		}

		#shoppingbtn {
			padding: 10px !important;
		}

		}

		.image {
			overflow: hidden !important;
		}

		@@media (min-width: 360px) {
			.col-sm-3
		{
			-webkit-box-flex: 0;
			-ms-flex: 0 0 25%;
			flex: 0 0 25%;
			max-width: 49%;
		}

		.btn {
			color: #fff;
			display: inline-block;
			font-size: 12px;
			font-weight: 500;
			line-height: 1;
			padding: 8px 9px;
			position: relative;
			text-transform: capitalize;
			transform: perspective(1px) translateZ(0px);
			transition: .3s;
			vertical-align: middle;
			background: #e72230;
			border-radius: 0;
			margin: 2px;
			border: none;
			margin-top: 20px;
			border-radius: 3px;
		}

		}
	</style>
</head>
<body>
	<header>
		<div id="header" class="main-menu-area">
			<div class="container">
				<div class="row align-items-center">
					<div class="col-lg-8 col-sm-8 col-4">
						<div class="logo p-3">
							<a asp-controller="Home" asp-action="Index"><img src="@Convert.ToString(Context.Session.GetString("logo"))" width="250" alt="" /></a>
						</div>
					</div>
					<div class="col-lg-2 col-sm-4 col-4" align="end">
						<a name="Shopping" id="shoppingbtn" class="btn btn-primary p-3" href="https://flight.iloveniseetrip.com/" target="_blank" role="button"> Return Flight  </a>
					</div>

					<div class="col-lg-2 col-sm-4 col-4" align="End">
						<a asp-controller="Account" asp-action="Login" name="Shopping" id="shoppingbtn" class="btn btn-primary p-3" role="button"> Holiday Booking </a>
					</div>

					<div class="col-12">
						<div class="mobile-menu"></div>
					</div>

				</div>
			</div>
		</div>
	</header>

	<!-- slider-start -->
	<div class="container-fluid p-0">
		<div id="demo" class="carousel slide" data-ride="carousel">
			<!-- Indicators -->
			<ul class="carousel-indicators">
				<li data-target="#demo" data-slide-to="0" class="active"></li>
				<li data-target="#demo" data-slide-to="1"></li>
				<li data-target="#demo" data-slide-to="2"></li>
				<li data-target="#demo" data-slide-to="3"></li>
			</ul>
			<!-- The slideshow -->

			<div class="carousel-inner">
				<div class="carousel-item active"><img src="~/dreamdays/slider_1.png" alt="Gold" class="img-responsive" width="100%" /></div>
				<div class="carousel-item "><img src="~/dreamdays/slider_2.png" alt="Gold" class="img-responsive" width="100%" /></div>
			</div>

			<!-- Left and right controls -->
			<a class="carousel-control-prev" href="#demo" data-slide="prev">
				<span class="carousel-control-prev-icon"></span>
			</a>
			<a class="carousel-control-next" href="#demo" data-slide="next">
				<span class="carousel-control-next-icon"></span>
			</a>
		</div>
	</div>
	<!-- slider-End -->
	<!-- Health Package Start -->
	<div class="about-us-area pt-115 pb-60 bg-light">
		<div class="container">
			<div class="row">
				<div class="col-xl-12 col-lg-12">
					<div class="section-title text-center section-circle mb-20">
						<div class="choose-title">
							<h2>
								<small>DREAMDAYS - HOLIDAY  </small> <br />
								<span class="text-success"></span>
							</h2>
						</div>
					</div>
				</div>
			</div>

			<div class="row justify-content-center ">

				<div class="col-12 col-lg-5 col-sm-6" align="center">
					<div class="card mb-3">
						<div class="image p-2">
							<a href="#" target="_blank">
								<img src="~/dreamdays/return_flight_img.png" class="img-fluid zoom w-100" alt="" />
							</a>
						</div>

						<div class="buttons mb-3">

							<!-- <div class="price">
							 <span class="text-danger"><del>Rs.16000</del></span>
							 <span class="official-price">Rs.8000</span>
							</div> -->

							<a href="https://flight.iloveniseetrip.com/" target="_blank">
								<button type="button" class="btn btn-sm btn-info">Book Now</button>
							</a>

							<!-- <a href="#" target="_blank">
								<button type="button" class="btn btn-sm btn-primary">Redeem</button>
							</a> -->
							<!-- <a href="#" target="_blank">
								<button type="button" class="btn btn-sm btn-primary"> How to Use</button>
							</a> -->
						</div>


					</div>
				</div>


				<div class="col-12 col-lg-5 col-sm-6" align="center">
					<div class="card mb-3">
						<div class="image p-2">
							<a href="#" target="_blank">
								<img src="~/dreamdays/holiday_booking.png" class="img-fluid zoom w-100" alt="" />
							</a>
						</div>

						<!-- <div class="price">
							<span class="text-danger"><del>Rs.30000</del></span>
							<span class="official-price">Rs.15000</span>
						</div> -->


						<div class="buttons mb-3">
							<a asp-controller="Account" asp-action="Login">
								<button type="button" class="btn btn-sm btn-info">Book Now</button>
							</a>

							<!-- <a href="#" target="_blank">
								<button type="button" class="btn btn-sm btn-primary">Redeem</button>
							</a> -->
							<!-- <a href="#" target="_blank">
								<button type="button" class="btn btn-sm btn-primary"> How to Use</button>
							</a> -->
						</div>


					</div>
				</div>

			</div>
		</div>
	</div>
	<!-- Health Package End -->
	<!-- Footer Start -->
	<div class="footer-bottom-area footer-bottom">
		<div class="container" style="max-width: 1500px;">
			<div class="row">
				<div class="col-xl-6 col-lg-8 col-md-8">
					<div class="copyright">
						<p>Copyright <i class="fa fa-copyright"></i> <script>document.write(new Date().getFullYear());</script> | <a href="javascript:void(0)">  @Convert.ToString(Context.Session.GetString("Title"))  </a> All Rights Reserved</p>
					</div>
				</div>
				<div class="col-xl-6 col-lg-4 col-md-6">
					<div class="footer-icon text-md-right">
						<div class="header-icon text-md-right">
							<a target="_blank" href="https://www.facebook.com/"><i class="fa fa-facebook"></i></a>
							<a target="_blank" href="https://www.twitter.com"><i class="fa fa-twitter"></i></a>
							<a target="_blank" href="https://www.linkedin.com"><i class="fa fa-linkedin"></i></a>
							<a target="_blank" href="https://telegram.org/"><i class="fa fa-telegram"></i></a>
							<a target="_blank" href="https://www.instagram.com"><i class="fa fa-instagram"></i></a>
							<a target="_blank" href="https://www.pinterest.com"><i class="fa fa-pinterest-p"></i></a>
							<a target="_blank" href="https://www.whatsapp.com"><i class="fa fa-whatsapp"></i> </a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
