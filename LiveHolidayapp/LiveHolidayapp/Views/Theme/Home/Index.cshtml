<!-- Slider Section Start -->
<section class="slider-section">
    <div id="carousel-id" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="item">
                <img src="~/img/home-slider/slider_1.jpg" alt="First slide" src="data:image/svg+xml;base64,">
            </div>
            <div class="item">
                <img src="~/img/home-slider/slider_2.jpg" alt="Second slide" src="data:image/svg+xml;base64,">
            </div>
            <div class="item active">
                <img src="~/img/home-slider/slider_3.jpg" alt="Third slide" src="data:image/svg+xml;base64,">
            </div>
        </div>
        <a class="left carousel-control" href="#carousel-id" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
        <a class="right carousel-control" href="#carousel-id" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
    </div>
</section>
<!-- Slider Section End -->
