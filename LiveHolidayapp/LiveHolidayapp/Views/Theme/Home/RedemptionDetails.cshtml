@model LiveHolidayapp.Models.BookHotelReport
@{
    ViewData["Title"] = "RedemptionDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Banner Start -->
<section class="banner_area">
    <div class="container">
        <div class="banner_inner_content">
            <h3> About Us </h3>
            <ul>
                <li class="active"><a href="~/Home/Index">Home</a></li>
                <li><a href="~/Home/About">Redemption Details</a></li>
            </ul>
        </div>
    </div>
</section>
<!-- Breadcrumb Banner End -->
<section class="room_list_area pt-10 ppt-20">
    <div class="container bg-white p-3">
        <div class="room_list_inner">
            <div class="row mr-0">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped ">
                            <thead>
                                <tr>
                                    <th>Checkin Date</th>
                                    <th>Checkout Date</th>
                                    <th>Destination</th>
                                    <th>Hotel Name</th>
                                    <th>Package Name</th>
                                    <th>Total Adult</th>
                                    <th>Total Child</th>
                                    <th>Booking File</th>
                                    <th>Detail</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Hotelreports != null && Model.Hotelreports.Count > 0)
                                {
                                    foreach (var item in Model.Hotelreports)
                                    {
                                        <tr>
                                            <td>@item.CheckInDate.ToString("dd/MM/yyy")</td>
                                            <td>@item.CheckOutDate.ToString("dd/MM/yyy")</td>
                                            <td>@item.City</td>
                                            <td>@item.HotelName</td>
                                            <td>@item.PackageName</td>
                                            <td>@item.AdultCount</td>
                                            <td>@item.ChildCount</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.bookingfile))
                                                {
                                                    <a href="~/Home/BookingDownloadPdf?id=@item.ID"><i class="fa fa-download" style="cursor:pointer"></i></a>
                                                }
                                            </td>
                                            <td>
                                                <i class="fa fa-eye" aria-hidden="true" data-toggle="modal" data-target="#myModal_@item.ID" style="cursor:pointer"></i>

                                                <!-- Modal -->
                                                <div id="myModal_@item.ID" class="modal fade" role="dialog">
                                                    <div class="modal-dialog">

                                                        <!-- Modal content-->
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                <h4 class="modal-title">
                                                                    @item.HotelName

                                                                </h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="table-responsive">
                                                                    <table class="table table-striped">
                                                                        <thead>
                                                                            <tr>
                                                                                <th>Name</th>
                                                                                <th>Type</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            @foreach (var pax in item.PassengerDetails)
                                                                            {
                                                                                <tr>
                                                                                    <td>@pax.Name</td>
                                                                                    <td>@pax.PaxType</td>
                                                                                </tr>
                                                                            }
                                                                        </tbody>
                                                                    </table>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                            </div>

                                                        </div>

                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7">
                                            <span class="text-danger">No record Found</span>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

