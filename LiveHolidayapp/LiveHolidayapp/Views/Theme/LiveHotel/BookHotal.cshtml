@{
    ViewData["Title"] = "BookHotal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Breadcrumb Banner Start -->
<section class="banner_area">
    <div class="container">
        <div class="banner_inner_content">
            <h3> Customer Detail Hotel  </h3>
            <ul>
                <li class="active"><a href="~/Home/index">Home</a></li>
                <li><a href="javascript:void(0);">Book Hotal</a></li>
            </ul>
        </div>
    </div>
</section>
<!-- Breadcrumb Banner End -->
<!-- Booking Deatils Start -->
<section class="room_details_area pt-10 ppt-20">
    <div class="container">
        <div class="row room_details_inner">
            <div class="col-md-4">
                <div class="search_right_sidebar">
                    <div class="book_room_area">
                        <div class="book_room_box bg-white p-3 rounded-1 border-gray">
                            <div class="book_table_item">
                                <h3>BOOK HOTELS </h3>
                            </div>

                            <div class="book_table_item">
                                <div class="book_table_item">
                                    <select class="selectpicker" disabled>
                                        <option>Select Room</option>
                                        <option>Room-1</option>
                                        <option>Room-2</option>
                                        <option>Room-3</option>
                                        <option>Room-4</option>
                                    </select>
                                </div>
                            </div>
                            <div class="book_table_item">
                                <div class="input-append">
                                    <input class="input-text" size="16" type="text" value="" placeholder="CheckOut Date" disabled>
                                </div>
                            </div>
                            <div class="book_table_item">
                                <select class="selectpicker" disabled>
                                    <option>Select Room</option>
                                    <option>Room-1</option>
                                    <option>Room-2</option>
                                    <option>Room-3</option>
                                    <option>Room-4</option>
                                </select>
                            </div>
                            <div class="book_table_item mt-0">
                                <select class="selectpicker" disabled>
                                    <option>Adults</option>
                                    <option>Adults-1</option>
                                    <option>Adults-2</option>
                                    <option>Adults-3</option>
                                    <option>Adults-4</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="border bg-white rounded-1 border-gray">
                    <div class="room_details_content mb20">
                        <div class="booking-title mb-2">
                            <h3>Pax Details </h3>
                        </div>
                        <div class="room_details_comment">
                            <form class="contact_us_form row" action="#" method="post" id="contactForm" novalidate>

                                <div class="form-group col-md-4">
                                    <select class="form-control" required>
                                        <option>Select Title</option>
                                        <option disabled selected>Select Title</option>
                                        <option>Mr.</option>
                                        <option>Mrs.</option>
                                    </select>
                                </div>

                                <div class="form-group col-md-4">
                                    <input type="text" name="" id="input" class="form-control" value="" required="required" placeholder="First Name">
                                </div>

                                <div class="form-group col-md-4">
                                    <input type="text" name="" id="input" class="form-control" value="" required="required" placeholder="Last Name">
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="room_details_content">
                        <div class="room_details_comment">
                            <form class="contact_us_form row" action="#" method="post" id="contactForm" novalidate>

                                <div class="form-group col-md-4">
                                    <select class="form-control" required>
                                        <option>Select Title</option>
                                        <option disabled selected>Select Title</option>
                                        <option>Mr.</option>
                                        <option>Mrs.</option>
                                    </select>
                                </div>

                                <div class="form-group col-md-4">
                                    <input type="text" name="" id="input" class="form-control" value="" required="required" placeholder="First Name">
                                </div>

                                <div class="form-group col-md-4">
                                    <input type="text" name="" id="input" class="form-control" value="" required="required" placeholder="Last Name">
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="room_details_content mt-30">
                        <div class="booking-title mb-2">
                            <h3>BASIC INFORMATION</h3>
                        </div>
                        <div class="room_details_comment">
                            <form class="contact_us_form row" action="#" method="post" id="contactForm" novalidate>
                                <div class="form-group col-md-6">
                                    <input type="text" name="" id="input" class="form-control" value="" required="required" placeholder="Address">
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="text" name="" id="input" class="form-control" value="" required="required" placeholder="Email ID">
                                </div>
                                <div class="form-group col-md-4">
                                    <input type="text" name="" id="input" class="form-control" value="" required="required" placeholder="City">
                                </div>
                                <div class="form-group col-md-4">
                                    <input type="text" name="" id="input" class="form-control" value="" required="required" placeholder="Mobile Number">
                                </div>
                                <div class="form-group col-md-4">
                                    <button type="submit" value="submit" class="btn submit_btn form-control" style="width: 100%;">Send OTP</button>
                                </div>
                                <div class="form-group col-md-6">
                                    <input type="text" name="" id="input" class="form-control" value="" required="required" placeholder="Enter OTP">
                                </div>
                                <div class="form-group col-md-6">
                                    <a href="javascript:void(0);" class="btn submit_btn form-control" style="width: 100%;">Sumbit</a>
                                </div>
                            </form>

                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>
<!-- Booking Deatils End -->
