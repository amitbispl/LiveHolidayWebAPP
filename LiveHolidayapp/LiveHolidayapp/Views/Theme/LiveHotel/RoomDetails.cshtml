@model LiveHolidayapp.Models.M_Hotel
@{
    ViewData["Title"] = "RoomDetails";
}

<!-- Breadcrumb Banner Start -->
<section class="banner_area">
    <div class="container">
        <div class="banner_inner_content">
            <h3>Customer Detail Hotel</h3>
            <ul>
                <li class="active"><a href="index.asp">Home</a></li>
                <li><a href="room-list.asp">Rooms</a></li>
            </ul>
        </div>
    </div>
</section>
<!-- Breadcrumb Banner End -->
<!-- Room Details Start -->
<section class="room_details_area pt-10 ppt-20">
    <div class="container">
        <div class="row room_details_inner">
            <div class="col-md-8">
                <div class="room_details_content bg-white p-3 rounded-1 border-gray">
                    <div class="room_d_main_text pb-0">
                        <div class="room_details_img owl-carousel">
                            <div class="item">
                                <img src="https://dummyimage.com/900x400/ccc/000" alt="">
                            </div>
                            <div class="item">
                                <img src="https://dummyimage.com/900x400/ccc/000" alt="">
                            </div>
                            <div class="item">
                                <img src="https://dummyimage.com/900x400/ccc/000" alt="">
                            </div>
                        </div>
                        <a href="#"><h4>Your  <span>Hotel Name </span></h4></a>
                        <div class="room_service_list">
                            <h3 class="room_d_title">Room services</h3>
                            <div class="row room_service_list_inner">
                                <div class="col-sm-12 col-md-offset-right-1">
                                    <div class="resot_list list-details">
                                        <ul>
                                            <li>Breakfast Included</li>
                                            <li>Free wifi</li>
                                            <li>Double Bed</li>
                                            <li>120 sq mt.</li>
                                            <li>8 persons</li>
                                            <li>Free internet</li>
                                            <li>Breakfast Included</li>
                                            <li>Free wifi</li>
                                            <li>Double Bed</li>
                                            <li>120 sq mt.</li>
                                            <li>8 persons</li>
                                            <li>Free internet</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="search_right_sidebar">
                    <div class="book_room_area ">
                        <div class="book_room_box bg-white p-3 border-gray rounded-1">
                            <div class="book_table_item">
                                <h3>Booking Details </h3>
                            </div>
                            <div class="book_table_item">
                                <div class="input-append">
                                    <input class="input-text" size="16" type="text" value="" placeholder="City Name Here" disabled>
                                </div>
                            </div>

                            <div class="book_table_item">
                                <div class="input-append">
                                    <input class="input-text" size="16" type="text" value="" placeholder="CheckIn Date" disabled>
                                </div>
                            </div>

                            <div class="book_table_item">
                                <div class="input-append">
                                    <input class="input-text" size="16" type="text" value="" placeholder="CheckOut Date" disabled>
                                </div>
                            </div>
                            <div class="book_table_item">
                                <select class="selectpicker" disabled>
                                    <option>Adults</option>
                                    <option>Adults-1</option>
                                    <option>Adults-2</option>
                                    <option>Adults-3</option>
                                    <option>Adults-4</option>

                                </select>
                            </div>
                            <div class="book_table_item">
                                <select class="selectpicker" disabled>
                                    <option>Select Children</option>
                                    <option>Children-1</option>
                                    <option>Children-2</option>
                                    <option>Children-3</option>
                                    <option>Children-4</option>
                                </select>
                            </div>
                            <div class="book_table_item">
                                <a class="book_now_btn" href="customer-detail-hotel.asp"> Continue </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Room Details End -->

